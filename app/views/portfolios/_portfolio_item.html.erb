<article class="card card-outline mb-4" data-id="<%= portfolio_item.id %>">
  <%= image_tag portfolio_img(portfolio_item.thumb_image_url, 'thumb'), width: '100%', class: "card-img-top", alt: "card-img-cap"  %>
  <div class="card-body" >
    <header>
      <h4 class="card-title">Images</h4>
      <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
    </header>
    <p class="card-text"><%= portfolio_item.subtitle %></p>
  </div>
</article>