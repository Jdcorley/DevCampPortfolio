<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Something Went Wrong!") %>
    <% end  %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title,  class: 'form-control', placeholder: 'Enter a title...' %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 15, placeholder: 'Enter some blog content...' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>